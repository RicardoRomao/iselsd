<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="DataSource" value="./data/Geografia.xml" />
    <add key="clientConfigFile" value="TriviaClient.exe.config"/>
  </appSettings>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp" port="0">
          <clientProviders>
            <formatter ref="binary"/>
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>
      </channels>
      <client>
        <wellknown type="Proxy.IZoneServer, Proxy"
                   url="tcp://localhost:9002/RemoteServer.rem" />
      </client>
    </application>
  </system.runtime.remoting>
</configuration>